server {
    listen 80;
    server_name _;

    location / {
        root /usr/share/nginx/html;
        index index.html;
        
        # This ensures Angular routing works (prevents 404 on refresh)
        try_files $uri $uri/ /index.html;
    }

    # Internal error handling
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}
